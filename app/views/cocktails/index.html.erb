 <div class="background-general">
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 70%), url(<%= image_path 'cocktails.jpg' %>);">
    <div>
    <h1>Welcome to Cha Cocktail !</h1>
    <p>The best cocktails from Cha</p>
    <%= link_to "add new cocktail", new_cocktail_path, class:"btn-ghost"%>
    </div>
  </div>
  <h1>Choose your Cocktails</h1>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo.key, crop: :fill if cocktail.photo.attached? %>)">
        <%= link_to cocktail.name , cocktail_path(cocktail) %>
      </div>
    <% end %>
  </div>
</div>



